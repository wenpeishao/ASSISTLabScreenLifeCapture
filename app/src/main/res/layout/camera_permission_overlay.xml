<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E6002b5c"
    android:padding="32dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_menu_camera"
        android:tint="@color/white_isabelline"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera Permission Required"
        android:textColor="@color/white_isabelline"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To scan your registration QR code, please grant camera permission"
        android:textColor="@color/white_isabelline"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/grant_permission_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grant Camera Permission"
        android:textColor="@color/white_isabelline"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/manual_entry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Code Manually"
        android:textColor="@color/white_isabelline"
        android:backgroundTint="#FF9800" />

</LinearLayout>