<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#002b5c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permission Testing"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white_isabelline"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/permission_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33FFFFFF"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="24dp"
            android:text="Loading permission status..." />

        <Button
            android:id="@+id/test_camera_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Camera Permission"
            android:backgroundTint="#4CAF50"
            android:textColor="@color/white_isabelline"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/test_location_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Location Permissions"
            android:backgroundTint="#2196F3"
            android:textColor="@color/white_isabelline"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/test_notification_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Notification Permission"
            android:backgroundTint="#FF9800"
            android:textColor="@color/white_isabelline"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/test_all_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test All Permissions"
            android:backgroundTint="#9C27B0"
            android:textColor="@color/white_isabelline"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a test screen to verify that all permission requests work correctly with interactive dialogs and proper explanations."
            android:textColor="#CCFFFFFF"
            android:textSize="12sp"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>